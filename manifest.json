{
    "manifest_version": 3,
    "name": "Wildcard CX",
    "version": "1.0.0",
    "description": "Turns your web browser into a web builder",
    "permissions": [
        "storage",
        "sidePanel",
        "tabs",
        "tabGroups",
        "bookmarks"
    ],
    "background": {
        "service_worker": "background/service-worker.js"
    },
    "side_panel": {
        "default_path": "sidebar/sidebar.html"
    },
    "action": {
        "default_title": "Open Wildcard CX",
        "default_icon": {
            "16": "icons/icon16.png",
            "19": "icons/icon19.png",
            "32": "icons/icon32.png",
            "38": "icons/icon38.png",
            "48": "icons/icon48.png",
            "64": "icons/icon64.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "19": "icons/icon19.png",
        "32": "icons/icon32.png",
        "38": "icons/icon38.png",
        "48": "icons/icon48.png",
        "64": "icons/icon64.png",
        "96": "icons/icon96.png",
        "128": "icons/icon128.png",
        "256": "icons/icon256.png",
        "512": "icons/icon512.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "sql-wasm.wasm"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}