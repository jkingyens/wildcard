{
    "manifest_version": 3,
    "name": "WildcardCX",
    "version": "1.0.0",
    "description": "Persistent SQLite workspace with Wasm functions and sandboxed code execution.",
    "permissions": [
        "storage",
        "sidePanel",
        "tabs",
        "tabGroups",
        "bookmarks"
    ],
    "background": {
        "service_worker": "background/service-worker.js"
    },
    "side_panel": {
        "default_path": "sidebar/sidebar.html"
    },
    "action": {
        "default_title": "Open WildcardCX"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "sql-wasm.wasm"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}